.olControlPanel {
	background:white;
	border: 2px double #eee;
}

.olControlPanel div { 
  display:block;
  width:  25px;
  height: 25px;
  margin: 5px;
  float:left;
  background-color:white;
}

.olControlPanel .olControlMouseDefaultsItemActive { 
  background-color: blue;
  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/pan_on.png");
}
.olControlPanel .olControlMouseDefaultsItemInactive { 
  background-color: orange;
  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/pan_off.png");
}
.olControlPanel .olControlDrawPointItemActive { 

  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/draw_point_on.png");
}
.olControlPanel .olControlDrawPointItemInactive { 
  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/draw_point_off.png");
}
.olControlPanel .olControlDrawPathItemActive { 
  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/draw_line_on.png");
}
.olControlPanel .olControlDrawPathItemInactive { 
  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/draw_line_off.png");
}
.olControlPanel .olControlDrawPolygonItemActive { 

  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/draw_polygon_on.png");
}
.olControlPanel .olControlDrawPolygonItemInactive { 

  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/draw_polygon_off.png");
}
.olControlPanel .olControlZoomBoxItemInactive { 

  background-color: orange;
  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/img/drag-rectangle-off.png");
}
.olControlPanel .olControlZoomBoxItemActive { 
  background-color: blue;
  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/img/drag-rectangle-on.png");
}
.olControlPanel .olControlZoomToMaxExtentItemInactive { 

  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/img/zoom-world-mini.png");
}

.olControlPanel .olControlSelectFeatureItemActive { 

  background-color: blue;
  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/panning-hand-on.png");
}
.olControlPanel .olControlSelectFeatureItemInactive { 
  width:  18px;  
  height: 18px;
  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/panning-hand-off.png");
}

.olControlPanel .olControlModifyFeatureItemActive { 

  background-color: blue;
  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/move_feature_on.png");
}
.olControlPanel .olControlModifyFeatureItemInactive { 
  width:  18px;  
  height: 18px;
  background-image: url("http://mapa.ign.gob.ar/js/lib/OpenLayers-2.9/theme/default/img/move_feature_off.png");
}


